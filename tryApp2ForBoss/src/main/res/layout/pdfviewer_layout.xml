<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/navigationbar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/navigationbar_background" >

        <ImageView
            android:id="@+id/boss_details_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/boss_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/navigationbar_title_font" />
        <ImageView
            android:id="@+id/boss_share_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@drawable/share_icon" />
    </FrameLayout>

    <android.extend.widget.PDFRendererView
        android:id="@+id/pdfView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <!--<ImageView-->
        <!--android:id="@+id/gia_png"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

</LinearLayout>